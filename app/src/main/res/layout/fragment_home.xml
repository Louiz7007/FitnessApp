<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azur"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Forthright im Kreisdiagramm -->

        <LinearLayout
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#80FFFFFF"
            android:orientation="vertical">


            <TextView
                android:id="@+id/viewProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/progress"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/imageButtonArrowLeft"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/arrow_left"
                    android:contentDescription="@string/arrowLeft" />

                <ProgressBar
                    android:id="@+id/progressBarDay"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/circular_progress_background"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="40"
                    android:progressDrawable="@drawable/circular_progress_bar" />

                <ImageButton
                    android:id="@+id/imageButtonArrowRight"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/arrow_right"
                    android:contentDescription="@string/arrowRight" />
            </LinearLayout>

        </LinearLayout>

        <!-- Eingetragene Trainings -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#80FFFFFF"
                android:orientation="vertical"
                android:layout_marginBottom="50dp">

                <TextView
                    android:id="@+id/TextViewRegisteredTrainings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/registered_trainings"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ListView
                    android:id="@+id/trainingsListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="?attr/actionBarSize"
                    android:divider="@android:color/white"
                    android:dividerHeight="1dp"
                    android:paddingTop="25dp" />
            </LinearLayout>

            <!-- Passende Schriftfarbe -->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
